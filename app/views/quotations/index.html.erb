</div>

<div class="quotations-container">
<% @quotations.each do |quotation|%>
  <%= link_to quotation_path(quotation) do%>
      <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Devis NÂ°<%= quotation.number%></h5>
