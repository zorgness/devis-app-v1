<div class="quotation-header">
  <h1>Devis N°<%= @quotation.number %></h1>
  <p><%= @quotation.date %></p>
</div>

<%= link_to customer_path( @quotation.customer) do %>
<div class="customer-container">
  <h3><%= @quotation.customer.first_name.capitalize %> <%= @quotation.customer.last_name.capitalize %> </h3>
  <p><%= @quotation.customer.address %></p>
</div>
<% end %>

<div class="quotation-details">
  <h5>Details</h5>
  <ul>
    <li>Mise en place chantier</li>
  </ul>
  <% @quotation.rooms.each do |room|%>
    <h6><%= room.name.capitalize %></h6>
    <% room.categories.each do |category|%>

      <% category.tasks.each do |task|%>

    <ul>
      <% task.products.each do |product|  %>
      <li><%= task.name.capitalize %> <%= product.name %>(s)  <% if product.number_of_items %><%= product.number_of_items %> unitée(s)<% end %> <% if product.m2 %> <%= product.m2 %> m2 <% end %></li>
      <% end %>
    </ul>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="quotation-total">
  <p style="text-align:center;">Prix forfaitaire :  <strong><%= @quotation.total_price %></strong> Euros</p>
</div>

<p style="color: green; font-size: 24px; font-weight: bold; text-align: center">A venir</p>
<div class="devis-btn">

  <button class="btn btn-primary">ajouter piéces</button>
  <button class="btn btn-info">ajouter tâches</button>
  <button class="btn btn-success">ajouter produits</button>
  <button class="btn btn-dark">editer devis</button>
  <button class="btn btn-warning">exporter en pdf</button>
  <button class="btn btn-danger">supprimer</button>
</div>
