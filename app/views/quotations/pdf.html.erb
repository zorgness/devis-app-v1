<div class="pdf-container">
<div class="banner-logo-martin">
  <%= image_tag "banner.png", class: 'logo-martin'%>
</div>
<div class="quotation-header">
  <p><%= @quotation.date %></p>
</div>


<div class="quotation-customer ">
  <div><h3><%= @quotation.customer.first_name.capitalize %> <%= @quotation.customer.last_name.capitalize %> </h3></div>
  <div><p><%= @quotation.customer.address %></p></div>
</div>

<div>
  <h3 style="text-align:center;text-decoration: underline;">DEVIS</h3>
  <h3 style="text-align:center; margin-bottom: 80px;text-decoration: underline;">N <%= @quotation.number %></h3>
</div>

<div class="quotation-details">
  <h6>PREPARATION</h6>
  <ul>
    <li>MISE EN PLACE CHANTIER</li>
  </ul>
  <% @quotation.rooms.each do |room|%>
    <h6><%= room.name.upcase %></h6>
    <% room.tasks.each do |task|%>

    <ul>
      <li><%= task.action.name.upcase %> <%= "#{task.product.name.upcase}(S)" if task.product  %> <%= "#{task.element.name.upcase}(S)" if task.element %> <%= "#{task.number_of_items} UNITEE(S)" if task.number_of_items  %> <%= "#{task.m2} M2" if task.m2  %>  </li>
    </ul>

    <% end %>
  <% end %>
</div>

<div>
  <p style="text-align:center;">Prix forfaitaire :  <strong><%= @quotation.total_price %></strong> Euros</p>
</div>

<div class="signature">
  <h5 style="text-align:center; margin-bottom: 80px;text-decoration: underline;">SIGNATURE</h5>
</div>

<div class="quotation-bottom">
<div class="quotation-bottom1">
  <div>Assurance MAAF</div>
  <div><strong style="color:black;">Martin Rudy</strong></div>
  <div>25, Rue Victor Leydet</div>
</div>

<div class="quotation-bottom2">
  <div>113396903W-MCE-002</div>
  <div>Siren : 522 240 712</div>
  <div>13100 Aix en Provence</div>
</div>
</div>
</div>





<% unless action_name == 'pdf.pdf'%>
<div class="devis-btn">

   <%= link_to "Valider", to_pdf_path(@quotation), class: 'btn-flat'%>
</div>

<% end %>
