      <%= link_to quotation_path(quotation) do%>
          <div class="card text-white bg-dark mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Devis NÂ°<%= quotation.number%></h5>
            <h6 class="card-subtitle mb-2 text-white"><%= quotation.customer.first_name.capitalize%> <%= quotation.customer.last_name.capitalize%></h6>
            <p class="card-text"><%= quotation.customer.address%></p>
            <p class="card-text"><%= quotation.date.strftime("%d/%m/%Y") %></p>

          </div>
        </div>
      <% end %>
    <% end %>

</div>
