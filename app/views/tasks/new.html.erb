<h1><%= @room.name.capitalize %></h1>
<%= simple_form_for [@room, @task] do |f| %>
  <%= f.association  :activity, label: 'Action', label_method: lambda { |activity| "#{activity.name}" }%>
  <%= f.association  :product, label: 'Produits',label_method: lambda { |product| "#{product.name}" }%>
  <%= f.input :number_of_items,label: 'Nombre unitÃ©es' %>
  <%= f.association  :element, label_method: lambda { |element| "#{element.name}" }%>
